# This file is generated by ./bin/cap <%= fetch(:stage) %> provision:nginx
# Generated by <%= ENV['USER'] %>, <%= Time.now.strftime('%Y-%m-%d %H:%M:%S') %>

upstream <%= "#{fetch(:application)}-puma" %> {
  server unix:<%= "#{fetch(:deploy_to)}/shared/tmp/sockets/puma.sock" %> fail_timeout=0;
}

server {
  listen 80;
  server_name <%= fetch(:server_name) %>;

  charset utf-8;
  client_max_body_size 20m;
  keepalive_timeout 5;

  root <%= "#{fetch(:deploy_to)}/current/public" %>;
  try_files $uri/index.html $uri.html $uri @<%= fetch(:application) %>;

  location ^~ /assets/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }

  location @<%= fetch(:application) %> {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;

    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://<%= "#{fetch(:application)}-puma" %>;
  }

  if (-f $document_root/system/maintenance.html) {
    return 503;
  }

  error_page 500 502 504 /500.html;
  location = /500.html {
    root <%= "#{fetch(:deploy_to)}/current/public" %>;
  }

  error_page 503 @maintenance;
  location @maintenance {
    rewrite  ^(.*)$  /system/maintenance.html break;
  }
}
