%ul.nav.nav-pills.nav-stacked
  %li{class: (controller_name=='groups' && action_name=='show') ? 'active' : ''}
    = link_to group_path(@group) do 
      Events
      %span.badge{id: "event-count-#{@group.id}"}= (@group.events.upcoming.count)
  %li{class: (controller_name=='members') ? 'active' : ''}
    = link_to group_members_path(@group) do
      Members
      %span.badge{id: "member-count-#{@group.id}"}= (@group.users.count + 1)
  - if current_user.can_update?(@group)
    %li{class: (controller_name=='groups' && ['edit', 'update'].include?(action_name)) ? 'active' : ''}
      = link_to 'Settings', edit_group_path(@group)
